<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_style">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="名字"
            android:textSize="@dimen/text_size"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/push_filename"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/text1"
            android:layout_toRightOf="@id/text1"
            android:layout_marginRight="15dp"
            android:text="testChannelName"
            android:layout_marginLeft="15dp"
         />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_below="@id/text1"
            android:text="描述"
            android:textSize="@dimen/text_size"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/push_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/text2"
            android:layout_toRightOf="@id/text2"
            android:text=""
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            />

        <Spinner
            android:id="@+id/SdkType"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_below="@id/push_info"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
        </Spinner>

        <!--<TextView-->
            <!--android:id="@+id/text3"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="35dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:gravity="center_vertical"-->
            <!--android:layout_below="@id/text2"-->
            <!--android:text="分类"-->
            <!--android:textSize="@dimen/text_size"-->
            <!--android:textColor="@color/black"/>-->

        <!--<EditText-->
            <!--android:id="@+id/push_class"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_alignBottom="@id/text3"-->
            <!--android:layout_toRightOf="@id/text3"-->
            <!--android:inputType="number"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--/>-->

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_below="@id/text2"
            android:text="密码"
            android:textSize="@dimen/text_size"
            android:visibility="invisible"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/push_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/text4"
            android:layout_toRightOf="@id/text4"
            android:text=""
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            android:layout_marginLeft="15dp"
            />


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="19dp"
        android:background="#d1d1d1"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:background="@drawable/dialog_style"
        >

        <Button
            android:id="@+id/btn_record_cancel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_style"
            android:text="取消推送"
            android:textSize="@dimen/text_size"
            android:textColor="@color/main_gray"/>

        <View
            android:layout_width="2px"
            android:layout_height="fill_parent"
            android:background="#d1d1d1"
            />

        <Button
            android:id="@+id/btn_record_ok"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_style"
            android:text="开始旁路直播"
            android:textSize="@dimen/text_size"
            android:textColor="#dc3839"/>
    </LinearLayout>
</LinearLayout>