<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tv"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="本次直播结束"
        android:textSize="17dp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:id="@+id/infolayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="58dp"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:id="@+id/viewerlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/viewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="观看人数"
                android:textSize="14dp"
                android:textColor="#777777"/>

            <TextView
                android:id="@+id/viewercount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/viewer"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textSize="19dp"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="37dp"
            android:layout_alignTop="@id/viewerlayout"
            android:layout_toRightOf="@id/viewerlayout"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="3dp"
            android:background="#777777"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/line"
            android:layout_marginLeft="39dp">
            <TextView
                android:id="@+id/praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞人数"
                android:textSize="14dp"
                android:textColor="#777777"/>

            <TextView
                android:id="@+id/praisecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/praise"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textSize="19dp"
                android:textColor="@color/black"/>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/return_main"
        android:layout_width="333dp"
        android:layout_height="44dp"
        android:layout_below="@id/infolayout"
        android:layout_marginTop="135dp"
        android:layout_centerHorizontal="true"
        android:text="返回首页"
        android:textColor="@color/red"
        android:textSize="@dimen/button_text_size"
        android:background="@drawable/main_btn_style"
        />
</RelativeLayout>