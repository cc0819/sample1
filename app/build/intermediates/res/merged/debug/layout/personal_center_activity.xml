<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:layout_marginBottom="60dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btn_person_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/person_center_return_style"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
           android:layout_centerHorizontal="true"
            android:text="我的资料"
            android:textColor="@color/red"
            android:textSize="@dimen/label_text_size"/>
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_below="@id/label"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#d1d1d1"/>

    <LinearLayout
        android:id="@+id/data_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- 头像 -->
        <RelativeLayout
            android:id="@+id/user_image_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/layout_click_style"
            android:clickable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21dp"
                android:text="头像"
                android:textColor="@color/black"
                android:textSize="@dimen/label_text_size"/>

            <ImageView
                android:id="@+id/go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/go"/>

            <!-- 用户头像logo -->
            <ImageButton
                android:id="@+id/userimage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"

                android:scaleType="fitXY"
                android:background="@drawable/userimage"
                android:contentDescription="Userlogo" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#d1d1d1"/>

        <!-- 昵称 -->
        <RelativeLayout
            android:id="@+id/user_name_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@drawable/layout_click_style"
            android:clickable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21dp"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="@dimen/label_text_size"/>

            <ImageView
                android:id="@+id/go_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/go"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/go_nick"
                android:layout_marginRight="21dp"
                android:text="美空Girls团"
                android:textColor="#777777"
                android:textSize="@dimen/text_size"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#d1d1d1"/>


        <!-- 性别 -->
        <RelativeLayout
            android:id="@+id/user_sex_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@drawable/layout_click_style"
            android:clickable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21dp"
                android:text="性别"
                android:textColor="@color/black"
                android:textSize="@dimen/label_text_size"/>

            <ImageView
                android:id="@+id/go_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/go"/>

            <TextView
                android:id="@+id/user_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/go_sex"
                android:layout_marginRight="21dp"
                android:text="女"
                android:textColor="#777777"
                android:textSize="@dimen/text_size"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#d1d1d1"/>


        <!-- 地址 -->
        <RelativeLayout
            android:id="@+id/user_address_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@drawable/layout_click_style"
            android:clickable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21dp"
                android:text="地址"
                android:textColor="@color/black"
                android:textSize="@dimen/label_text_size"/>

            <ImageView
                android:id="@+id/go_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/go"/>

            <TextView
                android:id="@+id/user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/go_address"
                android:layout_marginRight="21dp"
                android:text="未知"
                android:textColor="#777777"
                android:textSize="@dimen/text_size"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#d1d1d1"/>

        <!-- 签名 -->
        <RelativeLayout
            android:id="@+id/user_signature_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@drawable/layout_click_style"
            android:clickable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21dp"
                android:text="签名"
                android:textColor="@color/black"
                android:textSize="@dimen/label_text_size"/>

            <ImageView
                android:id="@+id/go_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/go"/>

            <TextView
                android:id="@+id/user_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/go_signature"
                android:layout_marginRight="21dp"
                android:text="未填写"
                android:textColor="#777777"
                android:textSize="@dimen/text_size"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#d1d1d1"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="333dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:layout_below="@id/data_layout"
        android:layout_centerHorizontal="true"
        android:text="退出登录"
        android:textColor="@color/red"
        android:textSize="@dimen/label_text_size"
        android:background="@drawable/main_btn_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_exit"
        android:layout_marginTop="21dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/btn_about"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/about_btn_style"/>

        <Button
            android:id="@+id/btn_about_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="关于随心播"
            android:textColor="#0070cc"
            android:background="@null"/>
    </LinearLayout>
</RelativeLayout>

